package test37;

import java.io.File;

import com.embeddedunveiled.serial.SerialComException;
import com.embeddedunveiled.serial.SerialComManager;
import com.embeddedunveiled.serial.SerialComManager.BAUDRATE;
import com.embeddedunveiled.serial.SerialComManager.DATABITS;
import com.embeddedunveiled.serial.SerialComManager.FLOWCONTROL;
import com.embeddedunveiled.serial.SerialComManager.PARITY;
import com.embeddedunveiled.serial.SerialComManager.STOPBITS;
import com.embeddedunveiled.serial.SerialComManager.FILETXPROTO;

public class Test37 {
	public static void main(String[] args) {
		
		SerialComManager scm = new SerialComManager();
		
		String PORT = null;
		int osType = SerialComManager.getOSType();
		if(osType == SerialComManager.OS_LINUX) {
			PORT = "/dev/ttyUSB0";
		}else if(osType == SerialComManager.OS_WINDOWS) {
			PORT = "COM51";
		}else if(osType == SerialComManager.OS_MAC_OS_X) {
			PORT = "/dev/cu.usbserial-A70362A3";
		}else if(osType == SerialComManager.OS_SOLARIS) {
			PORT = null;
		}else{
		}
		
		try {
			long handle = scm.openComPort(PORT, true, true, true);
			scm.configureComPortData(handle, DATABITS.DB_8, STOPBITS.SB_1, PARITY.P_NONE, BAUDRATE.B2400, 0);
			scm.configureComPortControl(handle, FLOWCONTROL.NONE, 'x', 'x', false, false);
			
			byte[] data = new byte[512];
			while(true) {
				try {
					Thread.sleep(500);
					data = scm.readBytes(handle);
					System.out.println("state: " + data.length);
					for(int x=0; x<data.length;x++) {
						System.out.println("data at " + x + " : " + data[x]);
					}
				} catch (Exception exp) {
				}
			}

			
//			long handle1 = scm.openComPort("/dev/ttyUSB1", true, true, true);
//			scm.configureComPortData(handle1, DATABITS.DB_8, STOPBITS.SB_1, PARITY.P_NONE, BAUDRATE.B115200, 0);
//			scm.configureComPortControl(handle1, FLOWCONTROL.NONE, 'x', 'x', false, false);
//			
//			byte[] data = new byte[512];
//			try {
//				scm.writeBytes(handle, new byte[] { 0x01 }, 0);
//				Thread.sleep(1000);
//				data = scm.readBytes(handle1);
//				System.out.println("state: " + data.length);
//				Thread.sleep(2000);
//			} catch (Exception exp) {
//			}
			
			scm.sendFile(handle, new File("/home/r/ws-host-uart/development/test2.c"), FILETXPROTO.XMODEM);

while(true);
//			scm.closeComPort(handle);
		} catch (Exception e) {
			e.printStackTrace();
		}
	}
}
